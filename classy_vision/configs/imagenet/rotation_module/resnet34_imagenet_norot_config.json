{
    "name": "classification_task",
    "num_epochs": 90,
    "loss": {
        "name": "CrossEntropyLoss"
    },
    "dataset": {
        "train": {
            "name": "image_path",
            "batchsize_per_replica": 256,
            "num_samples": null,
            "use_shuffle": true,
            "transforms": [{
                "name": "apply_transform_to_key",
                "transforms": [
                    {"name": "RandomResizedCrop", "size": 224},
                    {"name": "ToTensor"},
                    {
                        "name": "Normalize",
                        "mean": [0.485, 0.456, 0.406],
                        "std": [0.229, 0.224, 0.225]
                    }
                ],
                "key": "input"
            }],
            "image_folder": "data/imagenet/train"
        },
        "test": {
            "name": "image_path",
            "batchsize_per_replica": 200,
            "num_samples": null,
            "use_shuffle": false,
            "transforms": [{
                "name": "apply_transform_to_key",
                "transforms": [
                    {"name": "Resize", "size": 256},
                    {"name": "CenterCrop", "size": 224},
                    {"name": "ToTensor"},
                    {
                        "name": "Normalize",
                        "mean": [0.485, 0.456, 0.406],
                        "std": [0.229, 0.224, 0.225]
                    }
                ],
                "key": "input"
            }],
            "image_folder": "data/imagenet/val"
        }
    },
    "meters": {
        "accuracy": {
            "topk": [1, 5]
        }
    },
    "model": {
        "name": "resnet34",
        "small_input": false,
        "heads": [
          {
            "name": "fully_connected",
            "unique_id": "default_head",
            "num_classes": 1000,
            "fork_block": "block3-2",
            "in_plane": 512
          }
        ]
    },
    "optimizer": {
        "name": "sgd",
        "param_schedulers": {
            "lr": {
                "name": "step",
                "values": [0.1, 0.01, 0.001]
            }
        },
        "weight_decay": 1e-4,
        "momentum": 0.9
    }
}
